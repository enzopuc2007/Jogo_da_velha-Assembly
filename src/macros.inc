PULA_LINHA MACRO ; macro de pular linha (será usado repetidas vezes ao longo do jogo)
    PUSH AX
    MOV AH, 02H
    MOV DL, 10
    INT 21H
    POP AX
  ENDM

PUSHALL MACRO 
    PUSH AX
    PUSH BX 
    PUSH CX 
    PUSH DX 
    PUSH SI 
    ; PUSH DI 
  ENDM ; MACRO DE 
