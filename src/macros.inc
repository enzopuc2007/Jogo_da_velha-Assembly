PULA_LINHA MACRO ; macro de pular linha (será usado repetidas vezes ao longo do jogo)
    PUSH AX
    MOV AH, 02H
    MOV DL, 10
    INT 21H
    POP AX
  ENDM

PUSHALL MACRO 
    PUSH AX
    PUSH BX 
    PUSH CX 
    PUSH DX 
    PUSH SI 
    ; PUSH DI 
  ENDM ; MACRO DE 
; EMPILHAMENTO QUE SERÁ USADA VÁRIAS VEZES NO DECORRER DO PROGRAMA

POPALL MACRO 
    POP AX
    POP BX 
    POP CX 
    POP DX 
    POP SI 
    ; POP DI 
  ENDM

  CLS MACRO 
    PUSH AX

    MOV AH, 0H
    MOV AL, 03H
    INT 10H
    
    POP AX
  ENDM
  
  TEXTO_INICIO MACRO
    PUSH AX
    PUSH DX
    MOV AH,9
    LEA DX,MSG_BEMVINDO
    INT 21h
    POP DX
    POP AX
  ENDM

  VEZ_JOG1_IMP MACRO
    PUSH AX
    PUSH DX

    MOV AH,9
    LEA DX,MSG_VEZ_J1
    INT 21h

    POP DX
    POP AX
  ENDM

  VEZ_JOG2_COMP_IMP MACRO
    PUSH AX
    PUSH DX

    MOV AH,9

    CMP DI,1
    JE OUTRA
    LEA DX,MSG_VEZ_J2
    INT 21h

OUTRA:
    LEA DX,MSG_VEZ_COMP
    INT 21h

    POP DX
    POP AX
  ENDM

TENTE_NOVAMENTE MACRO
  PUSH AX
  PUSH DX

  MOV AH,9
  LEA DX,MSG_INVALIDO
  INT 21h

  QUALQUER_TECLA

  TEXTO_INICIO
  PULA_LINHA
  PULA_LINHA
  CALL IMPRIME_MATRIZ
  PULA_LINHA
  
  POP DX
  POP AX
  ENDM

  QUALQUER_TECLA MACRO
    PUSH AX
    PUSH DX

    PULA_LINHA

    MOV AH,9
    LEA DX,MSG_QUALQUER_TECLA
    INT 21h

    MOV AH,1
    INT 21h

    CLS

    POP DX
    POP AX
  ENDM

