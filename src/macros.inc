  ENDM

  VEZ_JOG1_IMP MACRO
    PUSH AX
    PUSH DX

    MOV AH,9
    LEA DX,MSG_VEZ_J1
    INT 21h

    POP DX
    POP AX
  ENDM

  VEZ_JOG2_COMP_IMP MACRO
