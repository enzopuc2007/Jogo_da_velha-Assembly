POPALL MACRO 
    POP AX
    POP BX 
    POP CX 
    POP DX 
    POP SI 
    ; POP DI 
  ENDM

  CLS MACRO 
    PUSH AX

    MOV AH, 0H
    MOV AL, 03H
    INT 10H
    
    POP AX
  ENDM
  
  TEXTO_INICIO MACRO
    PUSH AX
    PUSH DX
    MOV AH,9
    LEA DX,MSG_BEMVINDO
    INT 21h
