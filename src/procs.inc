 VERIFICA_MATRIZ PROC ; ESTE PROCEDIMENTO VERIFICA SE O ESPAÇO EM QUE O USUÁRIO QUER PREENCHER JÁ ESTÁ OCUPADO OU SE A POSIÇÃO EM QUE USUÁRIO QUER POSICIONAR A SUA JOGADA É INVÁLIDA
  XOR AX,AX

  CMP MATRIZ[BX][SI],78h ; VERIFICA SE O ATUAL ESPAÇO É PREENCHIDO COM 'X'
  JZ SAI8 ; SE JÁ ESTIVER OCUPADO RETORNE UM ERRO
  CMP MATRIZ[BX][SI],6Fh ; VERIFICA SE O ATUAL ESPAÇO É PREENCHIDO COM 'O'
  JZ SAI8 ; SE JÁ ESTIVER OCUPADO RETORNE UM ERRO
  ; SE NÃO ESTIVER OCUPADO, SIGA O FLUXO DO PROGRAMA
  CMP MATRIZ[BX][SI],31h
  JAE CONTINUA 
  CMP MATRIZ[BX][SI],39h
  JBE CONTINUA

SAI8:
  MOV AX,1

CONTINUA:
  RET
 VERIFICA_MATRIZ ENDP

