 IMPRIME_MATRIZ PROC 
 ; ESTE PROCEDIMENTO IMPRIME A MATRIZ EM SEU ESTADO ATUAL, TRATA-SE DE UM PROCEDIMENTO VISUAL PARA O PROGRAMA
 ; ENTRADA: MATRIZ 3X3
 ; SAÍDA: EXIBIÇÃO NA TELA DA MATRIZ 3X3
  PUSH AX ; EMPILHA OS VALORES ATUAIS DOS SEGUINTES REGISTRADORES
  PUSH BX
  PUSH CX
  PUSH DX
  XOR BX,BX ; LIMPA BX
  MOV AH,2 ; INICIALIZA A FUNÇÃO DE IMPRESSÃO DE CARACTERES
  MOV CH,3 ; ATRIBUI A CH O VALOR 3

REPETE2:
  MOV CL,3 ; ATRIBUI A CL O VALOR 3
  XOR SI,SI
  MOV DL,20h
  INT 21h
REPETE1:
  MOV AL,MATRIZ[BX][SI]

  CMP AL,6Fh
  JE IMPRIME0

  CMP AL,78h
  JE IMPRIMEX

  JMP NUMERO

IMPRIME0:
  MOV DL,6Fh
  INT 21h
  JMP COND

IMPRIMEX:
  MOV DL,78h
  INT 21h
  JMP COND

NUMERO:
  MOV DL,AL
  INT 21H
  JMP COND

COND:
  CMP CL,1
  JE FINAL1
  MOV DL,7Ch
  INT 21h  

FINAL1:
  INC SI
  DEC CL
  JNZ REPETE1
  ADD BX,3

  CMP CH,1
  JE FINAL2

  MOV DL,10
  INT 21h

  MOV DL,20h
  INT 21h

  MOV DH,3
DENOVO:
  MOV DL,2Dh
  INT 21h

  CMP DH,1
  JE FINAL2

  MOV DL,7Ch
  INT 21h
  DEC DH
  JNZ DENOVO

FINAL2:
  MOV DL,10
  INT 21h
  DEC CH
  JNZ REPETE2

  POP DX
  POP CX
  POP BX
  POP AX
  RET
 IMPRIME_MATRIZ ENDP

