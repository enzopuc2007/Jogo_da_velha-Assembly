VER_VIT PROC ; ESTE PROCEDIMENTO TEM COMO OBJETIVO VERIFICAR A VITÓRIA
 ;Verificação horizontal
  XOR BX,BX ; LIMPA O REGISTRADOR BX
  MOV CL,3 ; ATRIBUI AO REGISTRADOR CL O VALOR 3

DENOVO1:
  XOR DX,DX ; LIMPA O REGITRADOR DX
  XOR SI,SI ; LIMPA O REGISTRADOR SI
  MOV CH,3 ; ATRIBUI AO REGISTRADOR CH O VALOR 3

AGAIN1:
  CMP MATRIZ[BX][SI],78h ; VERIFICA SE O ATUAL ESPAÇO É PREENCHIDO COM 'X' ; VERIFICA SE O ATUAL ESPAÇO É PREENCHIDO COM 'X'
  JNE CONT1 ; SE NÃO FOI IGUAL VERIFIQUE SE É 'O'
  INC DH ; SE FOR IGUAL A 'X', INCREMENTE O HIGH BYTE DE DX
CONT1:
  CMP MATRIZ[BX][SI],6Fh ; VERIFICA SE O ATUAL ESPAÇO É PREENCHIDO COM 'O' ; VERIFICA SE O ATUAL ESPAÇO É PREENCHIDO COM 'O'
  JNE SAI1 ; SE NÃO FOI IGUAL ENTÃO O ESPEÇO ESTÁ 'VAZIO'
  INC DL ; SE FOR IGUAL A 'O', INCREMENTE O LOW BYTE DE DX
SAI1: 
  INC SI ; PASSA PARA A PRÓXIMA COLUNA
  DEC CH ; DECREMENTA O NÚMERO DE ESPAÇOS DA LINHA A SER VERIFICADO 
  JNZ AGAIN1 ; ENQUANTO HOUVER ESPAÇOS A SEREM VERIFICADOS, REPITA O RÓTULO AGAIN1

  CMP DH,3 ; HÁ 3 'X' ALINHADOS ?
  JE CORRECTION1 ; SE SIM, ATRIBUA A VITÓRIA AO JOGADOR 1
  CMP DL,3 ; HÁ 3 'O' ALINHADOS ?
  JE CORRECTION2 ; SE SIM, ATRIBUA A VITÓRIA AO JOGADOR 2 / COMPUTADOR
  ADD BX,3 ; PASSA PARA A PRÓXIMA LINHA
  DEC CL ; SE NÃO VENCEDOR NESSA LINHA, VERIFIQUE NA PRÓXIMA LINHA
  JNZ DENOVO1

  ;Verificação vertical
  XOR SI,SI ; LIMPA O REGISTRADOR SI
  MOV CL,3 ; ATRIBUI A CL O VALOR 3
DENOVO2:
  XOR DX,DX ; LIMPA DX
  XOR BX,BX ; LIMPA BX
  MOV CH,3 ; ATRIBUI A CH O VALOR 3
AGAIN2:
  CMP MATRIZ[BX][SI],78h ; VERIFICA SE O ATUAL ESPAÇO É PREENCHIDO COM 'X' ; VERIFICA SE O ATUAL ESPAÇO É PREENCHIDO COM 'X'
  JNE CONT2 ; SE NÃO FOI IGUAL VERIFIQUE SE É 'O'
  INC DH ; SE FOR IGUAL A 'X', INCREMENTE O HIGH BYTE DE DX
CONT2:
  CMP MATRIZ[BX][SI],6Fh ; VERIFICA SE O ATUAL ESPAÇO É PREENCHIDO COM 'O' ; VERIFICA SE O ATUAL ESPAÇO É PREENCHIDO COM 'O'
  JNE SAI12 ; SE NÃO FOI IGUAL ENTÃO O ESPEÇO ESTÁ 'VAZIO'
  INC DL ; SE FOR IGUAL A 'O', INCREMENTE O LOW BYTE DE DX
SAI12:
  ADD BX,3 ; PASSA A PRÓXIMA LINHA
  DEC CH ; DECREMENTA O NÚMERO DE ESPAÇOS DA COLUNA A SER VERIFICADO 
  JNZ AGAIN2 ; ENQUANTO HOUVER ESPAÇOS A SEREM VERIFICADOS, REPITA O RÓTULO AGAIN2

  CMP DH,3 ; HÁ 3 'X' ALINHADOS ?
CORRECTION1:
  JE VIT_JOG ; SE SIM, ATRIBUA A VITÓRIA AO JOGADOR 1
  CMP DL,3 ; HÁ 3 'O' ALINHADOS ?
CORRECTION2:
  JE VIT_JOG2_COMP ; SE SIM, ATRIBUA A VITÓRIA AO JOGADOR 2 / COMPUTADOR
  INC SI ; PASSE PARA A PRÓXIMA COLUNA
  DEC CL ; DECREMENTA CL
  JNZ DENOVO2 ; SE AINDA HOUVER COLUNAS A SEREM VERIFICADAS REPITA O RÓTULO DENOVO2
      
  ; verificação diagonal principal    
  XOR SI,SI ; LIMPA O REGISTRADOR SI
  XOR BX,BX ; LIMPA BX
  XOR DX,DX ; LIMPA DX
  MOV CX,3 ; ATRIBUI A CX O VALOR 3
AGAIN3:
  CMP MATRIZ[BX][SI],78h ; VERIFICA SE O ATUAL ESPAÇO É PREENCHIDO COM 'X'
  JNE CONT3 ; SE NÃO VERIFIQUE SE É IGUAL A 'O'
  INC DH ; INCREMENTA DH 
CONT3:
  CMP MATRIZ[BX][SI],6Fh ; VERIFICA SE O ATUAL ESPAÇO É PREENCHIDO COM 'O'
  JNE SAI3 ; SE NÃO VERIFIQUE ENTÃO O ESPAÇO ESTÁ 'VAZIO'
  INC DL ; INCREMENTA DL
SAI3:
  ADD BX,3 ; PASSA PARA A PRÓXIMA LINHA
  INC SI ; VAI UMA COLUNA PARA FRENTE
  LOOP AGAIN3 ; ENQUANTO TODA A DIAGONAL NÃO FOR LIDA, VOLTE AO RÓTULO AGAIN4
  CMP DH,3 ; SE HOUVER 3 'X', ALINHADOS ATRIBUA A VITÓRIA AO JOGADOR 1
  JE VIT_JOG
  CMP DL,3 ; SE HOUVER 3 'O', ALINHADOS ATRIBUA A VITÓRIA AO JOGADOR 2
  JE VIT_JOG2_COMP
 
 ; verificação diagonal secundária
  XOR DX,DX ; LIMPA O REGISTRADOR DX
  XOR BX,BX ; LIMPA O REGISTRADOR BX
  MOV SI,2 ; ATRIBUI A INDEXAÇÃO DA ÚLTIMA COLUNA
  MOV CX,3 ; ATRIBUI A CX O VALOR 3
AGAIN4:
  CMP MATRIZ[BX][SI],78h ; VERIFICA SE O ATUAL ESPAÇO É PREENCHIDO COM 'X'
  JNE CONT4 ; SE NÃO VERIFIQUE SE É IGUAL A 'O'
  INC DH ; INCREMENTA DH 
CONT4:
  CMP MATRIZ[BX][SI],6Fh ; VERIFICA SE O ATUAL ESPAÇO É PREENCHIDO COM 'O'
  JNE SAI4 ; SE NÃO VERIFIQUE ENTÃO O ESPAÇO ESTÁ 'VAZIO'
  INC DL ; INCREMENTA DL
SAI4:
  ADD BX,3 ; PASSA PARA A PRÓXIMA LINHA
  DEC SI ; VAI UMA COLUNA PARA TRÁS
  LOOP AGAIN4 ; ENQUANTO TODA A DIAGONAL NÃO FOR LIDA, VOLTE AO RÓTULO AGAIN4
  CMP DH,3 ; SE HOUVER 3 'X', ALINHADOS ATRIBUA A VITÓRIA AO JOGADOR 1
  JE VIT_JOG
  CMP DL,3 ; SE HOUVER 3 'O', ALINHADOS ATRIBUA A VITÓRIA AO JOGADOR 2
  JE VIT_JOG2_COMP
  JMP RETORNA
VIT_JOG: ; RÓTULO DE ATRIBUIÇÃO DE VITÓRIA AO JOGADOR 1
  CLS ; EXECUTA A MACRO DE LIMPEZA DE TELA
  MOV AX,1 ; ATRIBUI A AX O VALOR 1 (JOGADOR 1 FOI O VENCEDOR)
  JMP FINAL_VIT ; VAI PARA O RÓTULO DE RETORNO
VIT_JOG2_COMP:; RÓTULO DE ATRIBUIÇÃO DE VITÓRIA AO JOGADOR 2 (OU COMPUTADOR)
  CLS ; EXECUTA A MACRO DE LIMPEZA DE TELA
  MOV AX,2 ; ATRIBUI A AX O VALOR 2 (JOGADOR 2 OU COMPUTADOR VENCEU)
  JMP FINAL_VIT ; VAI PARA O RÓTULO DE RETORNO
RETORNA:
  MOV AX,0 ; AINDA NÃO HOUVE UM JOGADOR VENCEDOR
FINAL_VIT:
  RET
 VER_VIT ENDP

 RESET_MATRIZ PROC ; PROCEDIMENTO QUE RETORNA O TABULEIRO AO SEU ESTADO ORIGINAL (COMO DECLARADO NO .DATA)
  PUSH BX ; EMPILHA OS VALORES ATUAIS DE BX E DE SI, RESPECTIVAMENTE
  PUSH SI

  XOR CX,CX ; LIMPA O REGISTRADOR CX
  XOR BX,BX ; LIMPA O REGISTRADOR BX
  MOV DL,31h ; ATRIBUI A CL O CARACTERE '1'
  MOV CH,3 ; ATRIBUI A CH O VALOR 3 (LINHAS DA MATRIZ A SEREM RESETADAS)

RESET_MAT2:
  XOR SI,SI ; LIMPA O REGISTRADOR SI
  MOV CL,3 ; ATRIBUI A CL O VALOR 3 (COLUNAS DA ATUAL LINHA DA MATRIZ QUE FALTAM A SEREM RESETADAS)
RESET_MAT1:
  MOV MATRIZ[BX][SI],DL ; MOVIMENTAÇÃO DO ATUAL CARACTERE DE DL À POSIÇÃO DA MATRIZ DEFINIDA POR BX E SI
  INC DL ; INCREMENTA O VALOR DE DL PARA O PRÓXIMO CARACTERE A SER LIDO
  INC SI ; PASSA PARA A PRÓXIMA LINHA A SER PREENCHIDA DA ATUAL LINHA
  DEC CL ; DECREMENTA A QUANTIDADE DE COLUNAS DA ATUAL LINHA QUE RESTAM A SER PREENCHIDAS
  JNZ RESET_MAT1 ; ENQUANTO HOUVER COLUNAS A SEREM PREENCHIDAS VOLTE AO INÍCIO DO RÓTULO RESET_MAT1
  ADD BX,3 ; MOVE PARA A PRÓXIMA LINHA DA MATRIZ
  DEC CH ; DECREMENTA O NÚMERO DE LINHAS A SEREM PREENCHIDAS
  JNZ RESET_MAT2 ; ENQUANTO HOUVER LINHAS A SEREM PREENCHIDAS, VOLTE AO RÓTULO RESET_MAT2

  POP SI ; ARMAZENA OS DOIS VALORES DO TOPO DA PILHA EM SI E EM BX, RESPECTIVAMENTE.
  POP BX
  RET ; FIM DO PROCEDIMENTO
 RESET_MATRIZ ENDP
 